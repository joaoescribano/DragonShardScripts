[DEFNAME HOUSE_SYSTEM]
//Misc Settings
HOUSE_USE_DEEDS            0    //When a house got demolished, you want get back your house deed or the house value in gold? (0=House Value in Gold / 1=House Deed)
HOUSE_DECAY_TIMER        30    //House decay timer, in days (0=Decay Off)
DEMOLITION_PEND_DECAY        7    //House decay timer for Demolition Pending houses, in days (Houses can only be pended to demolition by a Game Master)
MAX_ACCOUNT_HOUSES        2    //Max number of houses allowed per account
ACCOUNT_OWNERSHIP        1    //All character of the house owner account will get owner access in the house (0=Off / 1=On)
HOUSE_USE_TRASHBARREL        1    //Enable house command to place trash barrel? (1=On / 0=Off)

//House Placement Settings
PLACEMENT_MIN_DIST_AREA        1    //Minimum area distance allowed between placed houses (Default=1)
PLACEMENT_MIN_DIST_FRONT    5    //Minimum front distance allowed between placed houses (Default=5)

//Storage Settings
USE_GLOBAL_STORAGE        0    //Use Global Storage Limit value or calculate it by the house area? (0=Calculate by House Area / 1=Global Value)
GLOBAL_SECURE_STORAGE        600    //Global max secured storage allowed per house (secure containers + items inside secure containers)
GLOBAL_LOCKDOWNS        100    //Global max locked items allowed per house (this value will cont on Secure Storage Limit)

//Access Settings
HOUSE_DOOR_ACCESS        1    //Owner of the house can change the door access? (1=On / 0=Off)
MAX_HOUSE_COOWNERS        15    //Max number of co-owners allowed per house
MAX_HOUSE_FRIENDS        50    //Max number of friends allowed per house
MAX_HOUSE_BANS            50    //Max number of bans allowed per house
MAX_HOUSE_ACCESS        50    //Max number of players on access list allowed per house
HOUSE_USE_DEPTH_OF_FIELD    0    //Allow enter on private houses only who is in access list
HOUSE_USE_BAN_ENGINE        1    //Enable house ban engine? (1=On / 0=Off)

//Addictional Features
ALLOW_BANKING            1    //Enable banking from the house sign? (1=On / 0=Off)
USE_NOTICE_SYSTEM        1    //Notice player using dialog when your house decay or when it removed from the house access list (0=Off / 1=On)

//AOS House Customization Settings
SIGN_CHANGE_PUBLIC_ONLY        0    //Only public houses can change house sign? (1=Yes / 0=No)
HOUSE_AOS_CUSTOMIZATION        1    //Enable AOS Customization system? (1=On / 0=Off)
HOUSE_COMPONENT_PRICE          500    //Price per component in gp's (Default=500)
HOUSE_ALLOW_CONVERTION        0    //Classic houses can be converted into custom foundations? (1=Yes / 0=No)

//Custom Vendor Settings
HOUSE_USE_VENDORS        1    //Enable house interactivity with custom vendors (1=On / 0=Off)
HOUSE_VENDORS_PUBLIC_ONLY    0    //Vendors can be placed only on public houses? (1=On / 0=Off)
HOUSE_USE_GLOBAL_MAXVENDORS    1    //Use Global Vendor Limit or calculate it by the house area? (0=Calculate by House Area / 1=Global Value)
HOUSE_GLOBAL_MAXVENDORS        5    //Max number of vendors allowed per house

/////////////////////////////////////////

[FUNCTION IsHouseVendor]        //Configure this function to recognize your vendor script
IF ((<NPC>==brain_human) || (<NPC>==brain_vendor))    //Do not use (<OWNER.ISPLAYER>), Sphere cannot recognize OWNER when the vendor got created.
 return 1
ELSE
 return 0
ENDIF

