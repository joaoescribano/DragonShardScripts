  SYSMESSAGE @0b99 <def.sec_txt_10> <SEX Vindo/Vinda> ao <serv.name>
  CONSUME 1 i_check
   TAG0.LASTIP <account.lastip>
   NEWITEM i_unstone
   ACT.LINK=<SRC.UID>
   ACT.EQUIP
 ELSE
  DIALOG d_seguranca
  RETURN 1
 ENDIF
ENDIF

