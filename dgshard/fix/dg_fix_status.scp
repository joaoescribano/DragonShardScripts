[FUNCTION f_fix_status]
if !(0<restest i_fix_status>)
 newitem i_fix_status
 new.equip
endif

[ITEMDEF i_fix_status]
ID=i_memory
NAME=FIX Status
TYPE=t_eq_script

ON=@CREATE
attr=attr_newbie
TIMER=3

ON=@TIMER
IF (STRMATCH(*ghost*,*<CONT.BODY>*))
    TIMER=3
ELSE
    cont.maxhits <cont.str>
    cont.maxmana <cont.int>
    cont.maxstam <cont.dex>
    TIMER 3
ENDIF
return 1

