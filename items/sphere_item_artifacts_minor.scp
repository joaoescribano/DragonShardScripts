[ITEMDEF i_horn_evil]
ID=0fc7
NAME=horn of evil
TYPE=t_eq_script
CATEGORY=Items by Professions
SUBSECTION=Bards
DESCRIPTION=Evil Horn
ON=@Create
   COLOR=021
   MORE1={5 15}  //number of charges
ON=@DClick
   IF <SRC.RESTEST 1 i_horn_evil>
      IF <MORE1>==0
         SRC.MESSAGE This horn is out of charges
         RETURN 1
      ELSE
         TARGETW Target the creature you want to corrupt
         RETURN 1
      ENDIF
   ELSE
      SRC.MESSAGE You need to carry the horn to use it
      RETURN 1
   ENDIF
ON=@TARGON_GROUND
   SRC.MESSAGE That is not a creature!
   RETURN 1
ON=@TARGON_ITEM
   SRC.MESSAGE That is not a creature!
   RETURN 1
ON=@TARGON_CHAR
   If !(<SRC.TARG.CANSEELOS>)
      SRC.sysmessage The creature cannot hear you clearly
      RETURN 1
   ElSEIF (<SRC.TARG.SERIAL>==<SRC.SERIAL>)
      SRC.SYSMESSAGE You cannot corrupt yourself!
      RETURN 1
   ELSEIF (<src.int> < <src.targ.int>)
      SRC.MESSAGE This creature is beyond your skill to corrupt
      SRC.ACTION=-1
      RETURN 1
   ELSEIF !(<SRC.TARG.IsMyPet>)
      SRC.MESSAGE That is not your pet!
      RETURN 1
   ELSEIF (<SRC.TARG.FLAGS> & statf_conjured)
      SRC.MESSAGE That creature cannot be corrupted
      RETURN 1
   ELSEIF (<SRC.TARG.KARMA> < -799)
      SRC.MESSAGE That creature is already evil
      RETURN 1
   ELSE
      SRC.SOUND 0ff
      SRC.EMOTE corrupt a <SRC.TARG.NAME>
      //SRC.SYSMESSAGELOC color_text,500167//"You are now a criminal."
      //SRC.FLAGS |= statf_criminal //Don't do this, its permanent!
      SRC.SPELLEFFECT s_reveal,100.0,0
      SRC.ANIM 11
      SRC.TARG.SPELLEFFECT s_bless,100.0
      SRC.TARG.KARMA -= <SRC.PROVOCATION>
      MORE1 -= 1  //remove a charge
      NAME=Horn of Evil (<dMORE1> charges)
      RETURN 1
   ENDIF

